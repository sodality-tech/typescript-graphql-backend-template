{
	"name": "typescript-graphql-backend-template",
	"version": "1.0.0",
	"description": "a template for typescript graphql apps",
	"main": "./dist/server.js",
	"author": "sodality-tech",
	"license": "MIT",
	"scripts": {
		"build": "tsc",
		"typecheck": "tsc --noEmit",
		"dev:server": "ts-node-dev --inspect --transpile-only --ignore-watch node_modules src/server.ts",
		"dev:worker": "ts-node-dev --inspect --transpile-only --ignore-watch node_modules src/worker.ts",
		"debug:server": "ts-node-dev --inspect --files ./src/server.ts",
		"debug:worker": "ts-node-dev --inspect --files ./src/worker.ts",
		"generate": "graphql-codegen --config ./codegen.yaml",
		"start": "node dist/server.js",
		"test": "jest",
		"postinstall": "if [ \"$NODE_ENV\" = 'production' ]; then tsc; fi"
	},
	"dependencies": {
		"@apollo/server": "^4.1.1",
		"@sentry/node": "^7.17.4",
		"@sentry/tracing": "^7.17.4",
		"apollo-server-express": "^3.11.1",
		"bull": "^4.10.1",
		"dd-trace": "^3.7.1",
		"express": "^4.18.2",
		"firebase-admin": "^11.2.0",
		"graphql": "^16.6.0",
		"jsonwebtoken": "^8.5.1",
		"knex": "^2.3.0",
		"pg": "^8.8.0",
		"sequelize": "^6.25.3",
		"ts-node": "^10.9.1",
		"typescript": "^4.8.4",
		"winston": "^3.8.2"
	},
	"devDependencies": {
		"@babel/core": "^7.19.6",
		"@babel/preset-env": "^7.19.4",
		"@babel/preset-typescript": "^7.18.6",
		"@graphql-codegen/add": "^3.2.1",
		"@graphql-codegen/cli": "^2.13.11",
		"@graphql-codegen/typescript": "^2.8.1",
		"@graphql-codegen/typescript-resolvers": "^2.7.6",
		"@types/bull": "^4.10.0",
		"@types/express": "^4.17.14",
		"@types/graphql": "^14.5.0",
		"@types/jest": "^29.2.1",
		"@types/node": "^18.11.9",
		"apollo-server-types": "^3.7.1",
		"jest": "^29.2.2",
		"prettier": "^2.7.1",
		"ts-jest": "^29.0.3",
		"ts-node-dev": "^2.0.0"
	}
}
